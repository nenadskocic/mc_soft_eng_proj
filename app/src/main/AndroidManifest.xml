<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neonatal.app.src">

    <uses-sdk android:minSdkVersion="11" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".NeonatalApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".DrawerActivity" />
        <activity android:name=".PatientProfileActivity" />
        <activity android:name=".CalendarViewActivity" />
        <activity android:name=".CreateJournalActivity" />
        <activity
            android:name=".JournalActivity"
            android:label="@string/title_activity_journal"
            android:theme="@style/AppTheme" />
        <activity android:name=".EventsActivity" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".PatientHistoryActivity" />
        <activity android:name=".DataEntryActivity"/>
        <activity android:name=".PatientMenuActivity"/>
        <activity android:name=".ReadDataEntryActivity"/>
        <activity android:name=".EquipmentActivity"
            android:configChanges="orientation"
        />
        <activity android:name=".EquipDetailActivity"/>
        <activity android:name=".VideoActivity"/>
    </application>

</manifest>